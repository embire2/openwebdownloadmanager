{
  "manifest_version": 2,
  "name": "OpenWeb Download Manager",
  "version": "1.0.0",
  "description": "Capture downloads and send them to OpenWeb Download Manager",
  "permissions": [
    "downloads",
    "storage",
    "nativeMessaging"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
