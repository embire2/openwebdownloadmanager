{
  "name": "openweb-download-manager",
  "version": "1.0.0",
  "description": "OpenWeb Download Manager - Advanced download accelerator",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-win": "electron-builder --win",
    "dist": "electron-builder"
  },
  "keywords": ["download", "manager", "accelerator"],
  "author": "OpenWeb",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "electron-store": "^8.1.0",
    "node-downloader-helper": "^2.1.9",
    "uuid": "^9.0.1"
  },
  "build": {
    "appId": "com.openweb.downloadmanager",
    "productName": "OpenWeb Download Manager",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
